<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Product Management System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container">
    <h2 class="mb-5">Products</h2>

    <table>
      <thead>
        <tr>
          <th>ProductCode</th>
          <th>ProductName</th>
          <th>ProductDate</th>
          <th>ProductOriginPrice</th>
          <th>Quantity</th>
          <th>ProductStoreCode</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.ProductCode %></td>
            <td><%= product.ProductName %></td>
            <td><%= product.ProductDate.toLocaleDateString() %></td>
            <td><%= product.ProductOriginPrice.toLocaleString() %></td>
            <td><%= product.Quantity %></td>
            <td><%= product.ProductStoreCode %></td>
            <td>
              <form action="/products/delete/<%= product.ProductCode %>" method="POST" onsubmit=
                "return confirm('Are you sure you want to delete this product?');">
                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h2>Add A New Product</h2>
    <form action="/products/create" method="POST" class="row">
      <div class="row">
      <div class="col-md">
        <input type="text" name="ProductCode" class="form-control" placeholder="ProductCode" required />
      </div>
      <div class="col-md-3">
        <input type="text" name="ProductName" class="form-control" placeholder="ProductName" required />
      </div>
      <div class="col-md">
        <input type="text" name="ProductDate" class="form-control" placeholder="dd/mm/yyyy" required />
      </div>
      <div class="col-md">
        <input type="text" name="ProductOriginPrice" class="form-control" placeholder="OriginPrice" required />
      </div>
      <div class="col-md-1">
        <input type="number" name="Quantity" class="form-control" placeholder="Quantity" required />
      </div>
      <div class="col-md">
        <input type="text" name="ProductStoreCode" class="form-control" placeholder="StoreCode" required />
      </div>
      </div>
      <div class="row">
        <button type="submit" class="btn btn-primary">Add Product</button>
      </div>
    </form>
  </div>
</body>
</html>
